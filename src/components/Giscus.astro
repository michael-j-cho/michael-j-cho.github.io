---
/**
 * Giscus Comments Component
 * Uses GitHub Discussions for a free, ad-free, and privacy-friendly comment system.
 * Configure your repository details here.
 */
---

<section class="giscus-container mt-12">
  <div class="giscus"></div>
</section>

<script is:inline>
  function loadGiscus() {
    // Remove existing giscus script if any
    const existingScript = document.querySelector('script[src*="giscus.app/client.js"]');
    if (existingScript) existingScript.remove();

    const script = document.createElement('script');
    script.src = 'https://giscus.app/client.js';
    
    // CONFIGURATION: Replace these with your own IDs from https://giscus.app
    script.setAttribute('data-repo', 'michael-j-cho/michael-j-cho.github.io');
    script.setAttribute('data-repo-id', 'R_kgDOM7h8_g'); // Placeholder - Update with your actual Repo ID
    script.setAttribute('data-category', 'Announcements');
    script.setAttribute('data-category-id', 'DIC_kwDOM7h8_s4Ci-Y7'); // Placeholder - Update with your actual Category ID
    
    script.setAttribute('data-mapping', 'pathname');
    script.setAttribute('data-strict', '0');
    script.setAttribute('data-reactions-enabled', '1');
    script.setAttribute('data-emit-metadata', '0');
    script.setAttribute('data-input-position', 'bottom');
    script.setAttribute('data-theme', 'preferred_color_scheme');
    script.setAttribute('data-lang', 'en');
    script.crossOrigin = 'anonymous';
    script.async = true;

    document.querySelector('.giscus').appendChild(script);
  }

  // Initial load
  loadGiscus();

  // Re-run on Astro view transitions
  document.addEventListener('astro:page-load', loadGiscus);
</script>
