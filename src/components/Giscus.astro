---
/**
 * Giscus Comments Component
 * Uses GitHub Discussions for a free, ad-free, and privacy-friendly comment system.
 * Configure your repository details here.
 */
---

<section class="giscus-container mt-12">
  <div class="giscus"></div>
</section>

<script is:inline>
  function getGiscusTheme() {
    const theme = document.documentElement.getAttribute('data-theme') || 'light'
    return theme === 'dark' ? 'transparent_dark' : 'light'
  }

  function loadGiscus() {
    const existingScript = document.querySelector(
      'script[src*="giscus.app/client.js"]',
    )
    if (existingScript) existingScript.remove()

    const script = document.createElement('script')
    script.src = 'https://giscus.app/client.js'

    script.setAttribute('data-repo', 'michael-j-cho/michael-j-cho.github.io')
    script.setAttribute('data-repo-id', 'R_kgDOQrUwSg')
    script.setAttribute('data-category', 'Blog')
    script.setAttribute('data-category-id', 'DIC_kwDOQrUwSs4C0In3')

    script.setAttribute('data-mapping', 'pathname')
    script.setAttribute('data-strict', '0')
    script.setAttribute('data-reactions-enabled', '0')
    script.setAttribute('data-emit-metadata', '0')
    script.setAttribute('data-input-position', 'bottom')
    script.setAttribute('data-theme', getGiscusTheme())
    script.setAttribute('data-lang', 'en')
    script.setAttribute('data-loading', 'lazy')
    script.crossOrigin = 'anonymous'
    script.async = true

    const container = document.querySelector('.giscus')
    if (container) {
      container.innerHTML = ''
      container.appendChild(script)
    }
  }

  function updateGiscusTheme() {
    const theme = getGiscusTheme()
    const iframe = document.querySelector('iframe.giscus-frame')
    if (!iframe) return

    iframe.contentWindow.postMessage(
      { giscus: { setConfig: { theme } } },
      'https://giscus.app',
    )
  }

  // Initial load
  loadGiscus()

  // Re-run on Astro view transitions
  document.addEventListener('astro:page-load', loadGiscus)

  // Listen for theme changes
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (
        mutation.type === 'attributes' &&
        mutation.attributeName === 'data-theme'
      ) {
        updateGiscusTheme()
      }
    })
  })

  observer.observe(document.documentElement, { attributes: true })
</script>
