---
import PageHead from '@/components/PageHead.astro'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
// Import the Markdown file as a component.
// Note: Ensure the path matches your actual folder structure (e.g., ../content/...)
import { Content as AboutContent } from '../content/authors/about.md'

// Person Schema for About page SEO
const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: SITE.title,
  url: SITE.href,
  description: SITE.description,
}
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="About" />

  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />

  <section class="flex flex-col gap-8">
    <div class="flex flex-col gap-4">
      <div>
        <h1 class="text-3xl font-bold md:text-4xl">About</h1>
        <!-- <p class="text-muted-foreground mt-1 font-mono text-sm"> -->
        <!--   Learn more about this blog -->
        <!-- </p> -->
      </div>
    </div>
    <div class="prose prose-sm dark:prose-invert max-w-none space-y-6">
      <AboutContent />
    </div>
  </section>
</Layout>
